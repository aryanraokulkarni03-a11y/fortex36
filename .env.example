# Environment Variables Template

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/skillsync

# NextAuth.js
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Groq API (for LLM)
GROQ_API_KEY=gsk_your_api_key

# Google Gemini (backup LLM)
GOOGLE_API_KEY=your_google_api_key

# Email (for OTP - using Gmail SMTP)
EMAIL_SERVER=smtp://user:pass@smtp.gmail.com:587
EMAIL_FROM=SkillSync <noreply@skillsync.app>

# GraphRAG Microservice
GRAPHRAG_URL=http://localhost:8000

# App Config
ALLOWED_EMAIL_DOMAIN=srmap.edu.in
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
